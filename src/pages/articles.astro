---
// src/pages/articles.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// 記事一覧を取得
const articles = await getCollection('articles');
// 日付順にソート（新しい順）
articles.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<BaseLayout pageTitle="Articles | 記事一覧">
  <main class="pt-16">
    <!-- ヒーローセクション -->
    <section class="relative text-center py-20 md:py-32 px-6 overflow-hidden">
      <!-- 背景のグラデーション -->
      <div class="absolute inset-0 z-0 opacity-20" style="background: radial-gradient(circle at 50% 30%, rgba(100, 100, 150, 0.5), transparent 70%);"></div>
      
      <div class="relative z-10 container mx-auto">
        <div class="flex justify-center mb-8">
          <div class="w-20 h-20 bg-blue-500 bg-opacity-10 rounded-full flex items-center justify-center">
            <svg class="w-10 h-10 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
        </div>
        <h1 class="text-4xl md:text-6xl font-black mb-8 hero-gradient-text tracking-tight font-noto">Articles</h1>
        <p class="max-w-3xl mx-auto text-lg md:text-xl text-gray-300 mb-8 font-noto leading-relaxed">
          模擬国連に関連したトピックを、法学・政治学の観点から共に探究しましょう。
        </p>
      </div>
    </section>

    <!-- 記事一覧セクション -->
    <section class="py-12 md:py-24">
      <div class="container mx-auto px-6">
        <div class="max-w-6xl mx-auto">
          {articles.length > 0 ? (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {articles.map((article: any) => (
                <article class="card-bg rounded-xl overflow-hidden transform hover:-translate-y-2 transition-transform duration-300 shadow-lg">
                  <div class="p-6">
                    <div class="flex items-center justify-between mb-3">
                      <span class="text-sm text-blue-400 font-bold">{article.data.category}</span>
                      <span class="text-xs text-gray-500">{new Date(article.data.date).toLocaleDateString('ja-JP')}</span>
                    </div>
                    <h2 class="font-bold text-xl mb-3 h-16 font-noto line-clamp-2">
                      <a href={`/articles/${article.id}`} class="hover:text-blue-400 transition-colors">
                        {article.data.title}
                      </a>
                    </h2>
                    <p class="text-gray-400 text-sm h-20 overflow-hidden mb-4">
                      {article.data.description}
                    </p>
                    <div class="flex flex-wrap gap-2 mb-4">
                      {article.data.tags.slice(0, 3).map((tag: string) => (
                        <span class="text-xs bg-gray-700 px-2 py-1 rounded-full text-gray-300">
                          {tag}
                        </span>
                      ))}
                    </div>
                    <a href={`/articles/${article.id}`} class="inline-flex items-center text-blue-400 hover:text-blue-300 text-sm font-bold group-hover:translate-x-2 transition-all duration-300">
                      続きを読む 
                      <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </a>
                  </div>
                </article>
              ))}
            </div>
          ) : (
            <div class="text-center py-12">
              <div class="flex justify-center mb-6">
                <div class="w-16 h-16 bg-gray-500 bg-opacity-10 rounded-full flex items-center justify-center">
                  <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
              </div>
              <p class="text-gray-400 text-lg">記事がまだありません。</p>
            </div>
          )}
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
