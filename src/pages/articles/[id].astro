---
// src/pages/articles/[id].astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import ComingSoonWrapper from '../../components/ComingSoonWrapper.astro';
import { getCollection } from 'astro:content';

// 動的ルートの生成
export async function getStaticPaths() {
  const articles = await getCollection('articles', ({ data }) => !data.draft);
  return articles.map((article) => ({
    params: { id: article.data.id },
    props: { article },
  }));
}

const { article } = Astro.props as { article: any };
const { Content } = await article.render();

// 現在のURL（番号ベース）
const currentUrl = `${Astro.site || 'https://munology.com'}/articles/${article.data.id}`;
const encodedUrl = encodeURIComponent(currentUrl);
const encodedTitle = encodeURIComponent(article.data.title);
---

<BaseLayout pageTitle={article.data.title}>
  <ComingSoonWrapper>
    <main class="pt-16">
    <!-- 記事ヘッダー -->
    <section class="relative py-20 md:py-32 px-6 overflow-hidden">
      <!-- 背景のグラデーション -->
      <div class="absolute inset-0 z-0 opacity-20" style="background: radial-gradient(circle at 50% 30%, rgba(100, 100, 150, 0.5), transparent 70%);"></div>

      <div class="relative z-10 container mx-auto">
        <div class="max-w-4xl mx-auto">
          <!-- メタ情報 -->
          <div class="flex items-center justify-between mb-6">
            <span class="text-sm text-blue-400 font-bold">{article.data.category}</span>
            <span class="text-sm text-gray-500">{new Date(article.data.date).toLocaleDateString('ja-JP')}</span>
          </div>

          <!-- タイトル -->
          <h1 class="text-3xl md:text-5xl font-black mb-6 hero-gradient-text tracking-tight font-noto">
            {article.data.title}
          </h1>

          <!-- 説明 -->
          <p class="text-lg md:text-xl text-gray-300 mb-8 font-noto leading-relaxed">
            {article.data.description}
          </p>

          <!-- タグ -->
          <div class="flex flex-wrap gap-2 mb-8">
            {article.data.tags.map((tag: string) => (
              <span class="text-sm bg-gray-700 px-3 py-1 rounded-full text-gray-300">
                {tag}
              </span>
            ))}
          </div>

          <!-- 著者情報とシェア -->
          <div class="flex items-center justify-between">
            <div class="flex items-center text-sm text-gray-400">
              <span>著者: {article.data.author}</span>
            </div>
            
            <!-- シェアボタン -->
            <div class="flex items-center gap-3">
              <span class="text-sm text-gray-500">シェア:</span>
              
              <!-- URLコピー -->
              <button 
                onclick="copyToClipboard()"
                class="group flex items-center gap-2 px-3 py-2 rounded-lg bg-gray-700 hover:bg-gray-600 text-gray-300 hover:text-white transition-all duration-200 text-sm"
                title="URLをコピー"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                </svg>
                <span class="hidden group-hover:inline">コピー</span>
              </button>
              
              <!-- Xシェア -->
              <a 
                href={`https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`}
                target="_blank"
                rel="noopener noreferrer"
                class="group flex items-center gap-2 px-3 py-2 rounded-lg bg-gray-700 hover:bg-blue-600 text-gray-300 hover:text-white transition-all duration-200 text-sm"
                title="Xでシェア"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
                <span class="hidden group-hover:inline">シェア</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 記事本文 -->
    <section class="py-12 md:py-20">
      <div class="container mx-auto px-6">
        <article class="max-w-4xl mx-auto">
          <!-- 記事本文（枠線なし、より自然な間隔） -->
          <div class="markdown-content prose prose-invert prose-lg max-w-none">
            <Content />
          </div>
          
          <!-- 記事末尾のアクション -->
          <div class="mt-16 pt-8 border-t border-gray-700">
            <div class="flex flex-col md:flex-row items-center justify-between gap-6">
              <!-- シェアセクション -->
              <div class="flex items-center gap-4">
                <span class="text-gray-400 font-medium">この記事をシェア:</span>
                <div class="flex gap-3">
                  <button 
                    onclick="copyToClipboard()"
                    class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-700 hover:bg-gray-600 text-gray-300 hover:text-white transition-all duration-200"
                    title="URLをコピー"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                    </svg>
                    <span>URLコピー</span>
                  </button>
                  
                  <a 
                    href={`https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-600 hover:bg-blue-500 text-white transition-all duration-200"
                    title="Xでシェア"
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                    <span>Xでシェア</span>
                  </a>
                </div>
              </div>
              
              <!-- 記事番号表示 -->
              <div class="text-sm text-gray-500">
                記事番号: #{article.data.id}
              </div>
            </div>
          </div>
        </article>
      </div>
    </section>

    <!-- ナビゲーション -->
    <section class="py-12 bg-gray-900/30">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto text-center">
          <a href="/articles" class="inline-block bg-white text-black font-bold py-3 px-8 rounded-full hover:bg-gray-200 transition-all transform hover:scale-105">
            ← 記事一覧に戻る
          </a>
        </div>
      </div>
    </section>
  </main>
  </ComingSoonWrapper>
</BaseLayout>

<script>
  function copyToClipboard() {
    const url = window.location.href;
    navigator.clipboard.writeText(url).then(() => {
      // 成功フィードバック
      const button = event.target.closest('button');
      const originalContent = button.innerHTML;
      button.innerHTML = `
        <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <span class="text-green-400">コピー完了!</span>
      `;
      button.classList.add('bg-green-700');
      
      setTimeout(() => {
        button.innerHTML = originalContent;
        button.classList.remove('bg-green-700');
      }, 2000);
    }).catch(() => {
      // エラーフィードバック
      alert('URLのコピーに失敗しました');
    });
  }
</script>

<style>
  .markdown-content {
    color: #e5e7eb;
    line-height: 1.8;
  }
  
  .markdown-content h1,
  .markdown-content h2,
  .markdown-content h3,
  .markdown-content h4,
  .markdown-content h5,
  .markdown-content h6 {
    color: #f9fafb;
    font-weight: 700;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    font-family: 'Noto Sans JP', sans-serif;
  }
  
  .markdown-content h1:first-child,
  .markdown-content h2:first-child {
    margin-top: 0;
  }
  
  .markdown-content h1 {
    font-size: 2.5rem;
    background: linear-gradient(135deg, #60a5fa, #a78bfa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    padding-bottom: 1rem;
    border-bottom: 2px solid rgba(96, 165, 250, 0.3);
  }
  
  .markdown-content h2 {
    font-size: 2rem;
    color: #60a5fa;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(96, 165, 250, 0.2);
  }
  
  .markdown-content h3 {
    font-size: 1.5rem;
    color: #a78bfa;
  }
  
  .markdown-content h4 {
    font-size: 1.25rem;
    color: #c084fc;
  }
  
  .markdown-content p {
    margin-bottom: 2rem;
    line-height: 1.8;
    font-size: 1.1rem;
  }
  
  .markdown-content ul,
  .markdown-content ol {
    margin-bottom: 2rem;
    padding-left: 2rem;
  }
  
  .markdown-content li {
    margin-bottom: 0.75rem;
    line-height: 1.7;
  }
  
  .markdown-content blockquote {
    border-left: 4px solid #3b82f6;
    background: rgba(59, 130, 246, 0.1);
    padding: 1.5rem;
    margin: 2rem 0;
    border-radius: 0 0.5rem 0.5rem 0;
    font-style: italic;
    color: #cbd5e1;
    position: relative;
  }
  
  .markdown-content blockquote::before {
    content: '"';
    font-size: 4rem;
    color: rgba(59, 130, 246, 0.3);
    position: absolute;
    top: -0.5rem;
    left: 0.5rem;
    line-height: 1;
  }
  
  .markdown-content code {
    background: linear-gradient(135deg, #374151, #4b5563);
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.9rem;
    color: #fbbf24;
    border: 1px solid rgba(251, 191, 36, 0.2);
  }
  
  .markdown-content pre {
    background: linear-gradient(135deg, #1f2937, #111827);
    padding: 1.5rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 2rem 0;
    border: 1px solid rgba(75, 85, 99, 0.3);
    position: relative;
  }
  
  .markdown-content pre::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, #3b82f6, #a78bfa, #ec4899);
    border-radius: 0.75rem 0.75rem 0 0;
  }
  
  .markdown-content pre code {
    background: transparent;
    padding: 0;
    border: none;
    color: #e5e7eb;
  }
  
  .markdown-content a {
    color: #60a5fa;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all 0.2s ease;
  }
  
  .markdown-content a:hover {
    color: #93c5fd;
    border-bottom-color: #60a5fa;
  }
  
  .markdown-content strong {
    font-weight: 700;
    color: #fbbf24;
    text-shadow: 0 0 10px rgba(251, 191, 36, 0.3);
  }
  
  .markdown-content em {
    font-style: italic;
    color: #a78bfa;
  }
  
  .markdown-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    border-radius: 0.5rem;
    overflow: hidden;
    border: 1px solid rgba(75, 85, 99, 0.3);
  }
  
  .markdown-content th,
  .markdown-content td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid rgba(75, 85, 99, 0.3);
  }
  
  .markdown-content th {
    background: linear-gradient(135deg, #374151, #4b5563);
    font-weight: 700;
    color: #f9fafb;
  }
  
  .markdown-content td {
    background: rgba(31, 41, 55, 0.3);
  }
  
  .markdown-content img {
    max-width: 100%;
    height: auto;
    border-radius: 0.75rem;
    margin: 2rem 0;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  }
  
  .markdown-content hr {
    border: none;
    height: 2px;
    background: linear-gradient(90deg, transparent, #374151, transparent);
    margin: 3rem 0;
  }
  
  /* 特殊な要素のスタイリング */
  .markdown-content > *:first-child {
    margin-top: 0;
  }
  
  .markdown-content > *:last-child {
    margin-bottom: 0;
  }
</style>