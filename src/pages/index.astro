---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import ComingSoonWrapper from '../components/ComingSoonWrapper.astro';
import PageHeader from '../components/PageHeader.astro';
import Card from '../components/Card.astro';
import Badge from '../components/Badge.astro';
import Button from '../components/Button.astro';
import Icon from '../components/Icon.astro';
import Grid from '../components/Grid.astro';
import Stack from '../components/Stack.astro';

const pageTitle = "Home | MUNOLOGY";
---

<BaseLayout pageTitle={pageTitle}>
  <ComingSoonWrapper>
    <main id="main-content">
        <!-- ヒーローセクション -->
      <section class="relative text-center py-20 md:py-32 px-6 overflow-hidden min-h-[800px] flex items-center" style="background: url('/images/index_fv.png') center 0%/cover no-repeat;">
        <!-- 背景のグラデーションと暗いオーバーレイ -->
        <div class="absolute inset-0 z-0" style="background: linear-gradient(rgba(20,20,40,0.7), rgba(20,20,40,0.7)), radial-gradient(circle at 50% 30%, rgba(100, 100, 150, 0.3), transparent 70%);"></div>
        <div class="relative z-10 container mx-auto flex flex-col items-center">
          <!-- キャッチコピー -->
          <h1 class="text-5xl md:text-7xl font-black mb-6 hero-gradient-text tracking-tight font-noto animate-fade-in">
            DRの向こう側へ
          </h1>
          <p class="max-w-3xl text-xl md:text-2xl text-gray-300 mb-12 font-noto leading-relaxed">
            MUNOLOGYは、会議の体験をより深い洞察に導き、高校以上の学びへと繋げていくためのサイトです。模擬国連に関連したトピックを、法学・政治学の観点から探究します。
          </p>
          <!-- CTAボタン -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Button href="/articles" variant="primary" size="large" ariaLabel="記事一覧ページに移動">
              <Icon name="book" size="small" class="mr-2" />
              記事を読む
            </Button>
            <Button href="/about" variant="secondary" size="large" ariaLabel="詳細ページに移動">
              <Icon name="info" size="small" class="mr-2" />
              詳しく見る
            </Button>
          </div>
        </div>
      </section>

        <!-- おすすめ記事セクション -->
      <section id="articles" class="py-16 md:py-24 relative">
        <!-- 背景パターン -->
        <div class="absolute inset-0 opacity-5">
          <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 20px 20px;"></div>
        </div>
        
        <div class="container mx-auto px-6 relative z-10">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-4 font-noto">
              <span class="text-gray-500 mr-4">§</span>
              <span class="hero-gradient-text">Featured Articles</span>
              <span class="text-gray-500 ml-4">§</span>
            </h2>
            <p class="text-gray-400 text-lg font-noto">模擬国連に関連した最新の記事をご紹介</p>
          </div>
          
          <Grid cols={3} gap="large">
            <!-- 記事カード 1 -->
            <Card href="/articles/icj-climate-change.md" ariaLabel="気候変動に関するICJ勧告的意見の記事" variant="info">
              <div class="flex items-center justify-between mb-4">
                <Badge variant="info">最新動向</Badge>
                <span class="text-xs text-gray-500">2024.07.25</span>
              </div>
              <h3 class="font-bold text-xl mb-4 h-16 font-noto group-hover:text-blue-400 transition-colors">
                速報解説：気候変動に関するICJ勧告的意見
              </h3>
              <p class="text-gray-400 text-sm h-20 overflow-hidden mb-6 leading-relaxed">
                UNFCCCやパリ協定の法的拘束力、Lex Specialisといった法理を解説し、国際法における気候変動問題の新たな展開を分析します。
              </p>
              <div class="inline-flex items-center text-blue-400 hover:text-blue-300 text-sm font-bold group-hover:translate-x-2 transition-all duration-300">
                続きを読む 
                <Icon name="chevronRight" size="small" class="ml-1 group-hover:translate-x-1 transition-transform duration-300" />
              </div>
            </Card>
            
            <!-- 記事カード 2 -->
            <Card href="/articles/non-intervention-principle.md" ariaLabel="内政不干渉の原則の記事" variant="success">
              <div class="flex items-center justify-between mb-4">
                <Badge variant="success">頻出トピック</Badge>
                <span class="text-xs text-gray-500">2024.07.24</span>
              </div>
              <h3 class="font-bold text-xl mb-4 h-16 font-noto group-hover:text-green-400 transition-colors">
                徹底解説：内政（不）干渉の原則
              </h3>
              <p class="text-gray-400 text-sm h-20 overflow-hidden mb-6 leading-relaxed">
                WW2以前から現代のR2P、国際刑事法に至る歴史的変遷を概観。会議で直面するケーススタディを豊富に盛り込みます。
              </p>
              <div class="inline-flex items-center text-green-400 hover:text-green-300 text-sm font-bold group-hover:translate-x-2 transition-all duration-300">
                続きを読む 
                <Icon name="chevronRight" size="small" class="ml-1 group-hover:translate-x-1 transition-transform duration-300" />
              </div>
            </Card>
            
            <!-- 記事カード 3 -->
            <Card href="#" ariaLabel="国連憲章から読み解く内政不干渉の記事（準備中）" variant="warning">
              <div class="flex items-center justify-between mb-4">
                <Badge variant="warning">コア文書</Badge>
                <span class="text-xs text-gray-500">Coming Soon</span>
              </div>
              <h3 class="font-bold text-xl mb-4 h-16 font-noto group-hover:text-yellow-400 transition-colors">
                国連憲章から読み解く「内政不干渉」
              </h3>
              <p class="text-gray-400 text-sm h-20 overflow-hidden mb-6 leading-relaxed">
                なぜ2条7項が置かれたのか。安保理の権限（第7章）との関係性を明確にし、歴史的・構造的理解を深めます。
              </p>
              <div class="inline-flex items-center text-yellow-400 hover:text-yellow-300 text-sm font-bold group-hover:translate-x-2 transition-all duration-300">
                準備中 
                <Icon name="chevronRight" size="small" class="ml-1 group-hover:translate-x-1 transition-transform duration-300" />
              </div>
            </Card>
          </Grid>
        </div>
      </section>

      <!-- Aboutセクション -->
      <section id="about" class="py-16 md:py-24 card-bg relative overflow-hidden">
        <!-- 装飾的な背景要素 -->
        <div class="absolute top-0 left-0 w-full h-full opacity-10">
          <div class="absolute top-10 left-10 w-32 h-32 bg-blue-500 rounded-full blur-3xl"></div>
          <div class="absolute bottom-10 right-10 w-40 h-40 bg-purple-500 rounded-full blur-3xl"></div>
        </div>
        
        <div class="container mx-auto px-6 text-center relative z-10">
          <div class="max-w-4xl mx-auto">
            <Stack gap="large" align="center">
              <div class="w-16 h-16 bg-blue-500 bg-opacity-10 rounded-full flex items-center justify-center">
                <Icon name="lightbulb" size="large" class="text-blue-400" />
              </div>
              <h2 class="text-3xl md:text-4xl font-bold font-noto">
                <span class="hero-gradient-text">About MUNOLOGY</span>
              </h2>
              <p class="text-xl text-gray-300 leading-relaxed font-noto">
                私たちは、模擬国連という熱狂の先に、日本の高校生の「知のOS」をアップデートし、
                未来の国際社会を担うチェンジメーカーを育むエコシステムを創造することを目指しています。
              <br><br>
              <span class="text-lg text-gray-400">情報格差の是正というロールズ的な問題意識に基づき、全ての探究者に、
                大学レベルの「本質的な知」へのアクセスを提供します。</span>
              </p>
              <Button href="/about" variant="primary" size="large" ariaLabel="詳細ページに移動">
                <Icon name="eye" size="small" class="mr-2" />
                さらに詳しく
              </Button>
            </Stack>
          </div>
        </div>
      </section>

      <!-- カテゴリーセクション -->
      <section id="categories" class="py-16 md:py-24 relative">
        <!-- 背景パターン -->
        <div class="absolute inset-0 opacity-5">
          <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 20px 20px;"></div>
        </div>
        
        <div class="container mx-auto px-6 relative z-10">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-4 font-noto">
              <span class="text-gray-500 mr-4">§</span>
              <span class="hero-gradient-text">Categories</span>
              <span class="text-gray-500 ml-4">§</span>
            </h2>
            <p class="text-gray-400 text-lg font-noto">学びの分野を選択してください</p>
          </div>
          
          <Grid cols={3} gap="large">
            <!-- カテゴリー1 -->
            <Card ariaLabel="コア文書カテゴリー">
              <div class="text-center">
                <div class="w-16 h-16 bg-yellow-400 bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                  <Icon name="book" size="large" class="text-yellow-400" />
                </div>
                <h3 class="font-bold text-xl font-noto group-hover:text-yellow-400 transition-colors">コア文書</h3>
                <p class="text-gray-400 text-sm mt-2">国連憲章や国際法の基本文書</p>
              </div>
            </Card>
            
            <!-- カテゴリー2 -->
            <Card ariaLabel="頻出トピックカテゴリー">
              <div class="text-center">
                <div class="w-16 h-16 bg-green-400 bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                  <Icon name="users" size="large" class="text-green-400" />
                </div>
                <h3 class="font-bold text-xl font-noto group-hover:text-green-400 transition-colors">頻出トピック</h3>
                <p class="text-gray-400 text-sm mt-2">会議でよく扱われるテーマ</p>
              </div>
            </Card>
            
            <!-- カテゴリー3 -->
            <Card ariaLabel="最新動向カテゴリー">
              <div class="text-center">
                <div class="w-16 h-16 bg-blue-400 bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                  <Icon name="lightning" size="large" class="text-blue-400" />
                </div>
                <h3 class="font-bold text-xl font-noto group-hover:text-blue-400 transition-colors">最新動向</h3>
                <p class="text-gray-400 text-sm mt-2">国際社会の最新の動き</p>
              </div>
            </Card>
          </Grid>
        </div>
      </section>
    </main>
  </ComingSoonWrapper>
</BaseLayout>

<style>
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fade-in {
    animation: fade-in 0.8s ease-out;
  }
</style>
