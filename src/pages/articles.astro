---
// src/pages/articles.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// 記事一覧を取得
const articles = await getCollection('articles');
// 日付順にソート（新しい順）
articles.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<BaseLayout pageTitle="Articles | 記事一覧">
  <main class="pt-16">
    <!-- ヒーローセクション -->
    <section class="relative text-center py-20 md:py-32 px-6 overflow-hidden">
      <!-- 背景のグラデーション -->
      <div class="absolute inset-0 z-0 opacity-20" style="background: radial-gradient(circle at 50% 30%, rgba(100, 100, 150, 0.5), transparent 70%);"></div>
      
      <div class="relative z-10 container mx-auto">
        <h1 class="text-4xl md:text-6xl font-black mb-8 hero-gradient-text tracking-tight font-noto">Articles</h1>
        <p class="max-w-3xl mx-auto text-lg md:text-xl text-gray-300 mb-8 font-noto leading-relaxed">
          模擬国連に関連したトピックを、法学・政治学の観点から共に探究しましょう。
        </p>
      </div>
    </section>

    <!-- 記事一覧セクション -->
    <section class="py-12 md:py-24">
      <div class="container mx-auto px-6">
        <div class="max-w-6xl mx-auto">
          {articles.length > 0 ? (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {articles.map((article) => (
                <article class="card-bg rounded-xl overflow-hidden transform hover:-translate-y-2 transition-transform duration-300 shadow-lg">
                  <div class="p-6">
                    <div class="flex items-center justify-between mb-3">
                      <span class="text-sm text-blue-400 font-bold">{article.data.category}</span>
                      <span class="text-xs text-gray-500">{new Date(article.data.date).toLocaleDateString('ja-JP')}</span>
                    </div>
                    <h2 class="font-bold text-xl mb-3 h-16 font-noto line-clamp-2">
                      <a href={`/articles/${article.id}`} class="hover:text-blue-400 transition-colors">
                        {article.data.title}
                      </a>
                    </h2>
                    <p class="text-gray-400 text-sm h-20 overflow-hidden mb-4">
                      {article.data.description}
                    </p>
                    <div class="flex flex-wrap gap-2 mb-4">
                      {article.data.tags.slice(0, 3).map((tag: string) => (
                        <span class="text-xs bg-gray-700 px-2 py-1 rounded-full text-gray-300">
                          {tag}
                        </span>
                      ))}
                    </div>
                    <a href={`/articles/${article.id}`} class="text-blue-400 hover:text-blue-300 text-sm font-bold">
                      続きを読む →
                    </a>
                  </div>
                </article>
              ))}
            </div>
          ) : (
            <div class="text-center py-12">
              <p class="text-gray-400 text-lg">記事がまだありません。</p>
            </div>
          )}
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
