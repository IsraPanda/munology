---
// src/pages/contact.astro
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Contact | お問い合わせ";
---
<BaseLayout pageTitle={pageTitle}>
  <div class="container mx-auto px-6 py-16">
    <div class="max-w-2xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-black tracking-tighter mb-4">{pageTitle}</h1>
      <p class="text-lg text-gray-300 mb-12">
        MUNOLOGYに関するご質問、記事のリクエスト、その他ご連絡はこちらのフォームからお願いいたします。
      </p>
    </div>

    <form 
      action="https://formspree.io/f/mvgqadol" 
      method="POST"
      class="max-w-2xl mx-auto"
    >
    <input type="hidden" name="_next" value="https://www.munology.com/thanks">
      <div class="mb-6">
        <label for="name" class="block mb-2 text-sm font-bold text-gray-300">お名前</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required
          class="w-full px-4 py-3 bg-[#1a1a1a] border border-gray-700 rounded-lg focus:outline-none focus:border-blue-500 transition-colors"
        >
      </div>
      <div class="mb-6">
        <label for="email" class="block mb-2 text-sm font-bold text-gray-300">メールアドレス</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required
          class="w-full px-4 py-3 bg-[#1a1a1a] border border-gray-700 rounded-lg focus:outline-none focus:border-blue-500 transition-colors"
        >
      </div>
      <div class="mb-8">
        <label for="message" class="block mb-2 text-sm font-bold text-gray-300">お問い合わせ内容</label>
        <textarea 
          id="message" 
          name="message" 
          rows="6" 
          required
          class="w-full px-4 py-3 bg-[#1a1a1a] border border-gray-700 rounded-lg focus:outline-none focus:border-blue-500 transition-colors"
        ></textarea>
      </div>
      <div class="text-center">
        <button 
          type="submit"
          class="bg-white text-black font-bold py-3 px-12 rounded-full inline-block hover:bg-gray-200 transition-all transform hover:scale-105"
        >
          送信する
        </button>
      </div>
    </form>
  </div>
</BaseLayout>
